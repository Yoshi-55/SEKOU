<div class="max-w-4xl mx-auto">
  <!-- Header -->
  <div class="mb-4 flex items-center gap-3">
    <h1 class="text-3xl font-bold">応募詳細</h1>
    <% if @apply.pending? %>
      <span class="bg-yellow-100 text-yellow-800 text-xs px-2 py-1 rounded-full font-medium">審査中</span>
    <% elsif @apply.accepted? %>
      <span class="bg-green-500 text-white text-xs px-2 py-1 rounded-full font-medium">承認済み</span>
    <% elsif @apply.rejected? %>
      <span class="bg-red-500 text-white text-xs px-2 py-1 rounded-full font-medium">不採用</span>
    <% elsif @apply.cancelled? %>
      <span class="bg-gray-400 text-white text-xs px-2 py-1 rounded-full font-medium">キャンセル</span>
    <% end %>
  </div>

  <!-- Job Information -->
  <div class="bg-white rounded-xl shadow border border-gray-100 p-4 mb-4">
    <h2 class="text-base font-bold mb-3 text-gray-700">案件情報</h2>
    <%= link_to @apply.job.title, job_path(@apply.job), class: "text-base font-bold text-blue-600 hover:underline leading-snug block mb-3" %>

    <div class="grid grid-cols-2 gap-3 p-3 bg-gray-50 rounded-xl">
      <div>
        <p class="text-xs text-gray-400 mb-0.5">案件種別</p>
        <p class="font-medium text-sm"><%= @apply.job.job_type_label %></p>
      </div>
      <div>
        <p class="text-xs text-gray-400 mb-0.5">場所</p>
        <p class="font-medium text-sm">📍 <%= @apply.job.location %></p>
      </div>
      <div>
        <p class="text-xs text-gray-400 mb-0.5">予算</p>
        <p class="font-bold text-sm text-blue-600"><%= number_to_currency(@apply.job.budget, unit: "¥", precision: 0) %></p>
      </div>
      <div>
        <p class="text-xs text-gray-400 mb-0.5">作業予定日</p>
        <p class="font-medium text-sm">
          <%= l(@apply.job.start_date, format: :long) %>
          <% if @apply.job.end_date.present? && @apply.job.end_date != @apply.job.start_date %>
            〜 <%= l(@apply.job.end_date, format: :long) %>
          <% end %>
        </p>
      </div>
      <% if @apply.job.address.present? %>
        <div class="col-span-2">
          <p class="text-xs text-gray-400 mb-0.5">詳細住所</p>
          <p class="font-medium text-sm"><%= @apply.job.address %></p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Application Details -->
  <div class="bg-white rounded-xl shadow border border-gray-100 p-4 mb-4">
    <h2 class="text-base font-bold mb-3 text-gray-700">応募内容</h2>

    <div class="space-y-3">
      <div>
        <p class="text-xs text-gray-400 mb-0.5">応募日時</p>
        <p class="font-medium text-sm"><%= l(@apply.applied_at, format: :long) %></p>
      </div>

      <div>
        <p class="text-xs text-gray-400 mb-1">応募メッセージ</p>
        <div class="p-3 bg-gray-50 rounded-xl text-sm leading-relaxed text-gray-700">
          <%= simple_format(@apply.message) %>
        </div>
      </div>

    </div>
  </div>

  <!-- Applicant Info (for Job Owner) -->
  <% if @apply.job.client == current_user %>
    <div class="bg-white rounded-xl shadow border border-gray-100 p-4 mb-4">
      <h2 class="text-base font-bold mb-3 text-gray-700">応募者情報</h2>
      <div class="space-y-2">
        <div class="grid grid-cols-2 gap-2">
          <span class="text-xs text-gray-400">名前</span>
          <span class="font-medium text-sm"><%= @apply.craftsman.name %></span>
        </div>
        <div class="grid grid-cols-2 gap-2">
          <span class="text-xs text-gray-400">会社名</span>
          <span class="font-medium text-sm"><%= @apply.craftsman.company_name %></span>
        </div>
        <div class="grid grid-cols-2 gap-2">
          <span class="text-xs text-gray-400">都道府県</span>
          <span class="font-medium text-sm"><%= @apply.craftsman.prefecture %></span>
        </div>
        <div class="grid grid-cols-2 gap-2">
          <span class="text-xs text-gray-400">電話番号</span>
          <span class="font-medium text-sm"><%= @apply.craftsman.phone %></span>
        </div>
        <div class="grid grid-cols-2 gap-2">
          <span class="text-xs text-gray-400">メール</span>
          <span class="font-medium text-sm break-all"><%= @apply.craftsman.email %></span>
        </div>
        <% if @apply.craftsman.years_of_experience.present? %>
          <div class="grid grid-cols-2 gap-2">
            <span class="text-xs text-gray-400">経験年数</span>
            <span class="font-medium text-sm"><%= @apply.craftsman.years_of_experience %>年</span>
          </div>
        <% end %>
        <% if @apply.craftsman.bio.present? %>
          <div>
            <p class="text-xs text-gray-400 mb-1">自己紹介</p>
            <div class="p-3 bg-gray-50 rounded-xl text-sm leading-relaxed text-gray-700">
              <%= simple_format(@apply.craftsman.bio) %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Response Status -->
  <% if @apply.responded_at.present? %>
    <div class="bg-white rounded-xl shadow border border-gray-100 p-4 mb-4">
      <p class="text-xs text-gray-400">回答日: <span class="font-medium text-sm text-gray-700"><%= l(@apply.responded_at, format: :long) %></span></p>
    </div>
  <% end %>

  <!-- Actions -->
  <div class="flex flex-wrap gap-2">
    <% if @apply.craftsman == current_user %>
      <%= link_to "← 応募履歴に戻る", applies_path, class: "text-blue-600 hover:underline text-sm" %>
      <% if @apply.pending? %>
        <%= link_to "応募をキャンセル", cancel_apply_path(@apply), data: { turbo_method: :patch, turbo_confirm: "本当にキャンセルしますか？" }, class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg font-medium text-sm" %>
      <% end %>
    <% elsif @apply.job.client == current_user %>
      <%= link_to "← 案件詳細に戻る", job_path(@apply.job), class: "text-blue-600 hover:underline text-sm" %>
      <% if @apply.pending? %>
        <%= link_to "承認する", accept_apply_path(@apply), data: { turbo_method: :patch }, class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-medium text-sm" %>
        <%= link_to "不採用", reject_apply_path(@apply), data: { turbo_method: :patch, turbo_confirm: "本当に不採用としますか？" }, class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg font-medium text-sm" %>
      <% end %>
    <% end %>
  </div>
</div>
