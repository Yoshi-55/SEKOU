<div class="max-w-md mx-auto">
  <div class="bg-white rounded-lg shadow p-6 md:p-8">
    <h2 class="text-2xl md:text-3xl font-bold mb-6 text-center">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5" }) do |f| %>
      <!-- Email -->
      <div>
        <%= f.label :email, "メールアドレス", class: "block font-bold text-gray-700 mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border-2 border-gray-300 rounded-lg px-4 py-3 text-base focus:border-blue-500 focus:outline-none", placeholder: "example@example.com" %>
      </div>

      <!-- Password -->
      <div>
        <%= f.label :password, "パスワード", class: "block font-bold text-gray-700 mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full border-2 border-gray-300 rounded-lg px-4 py-3 text-base focus:border-blue-500 focus:outline-none" %>
      </div>

      <!-- Remember Me -->
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center gap-3">
          <%= f.check_box :remember_me, class: "w-5 h-5" %>
          <%= f.label :remember_me, "ログイン状態を保持する", class: "text-gray-700 font-medium" %>
        </div>
      <% end %>

      <!-- Submit -->
      <div class="pt-2">
        <%= f.submit "ログイン", class: "w-full bg-blue-600 hover:bg-blue-700 text-white px-6 py-4 rounded-xl font-bold cursor-pointer text-lg" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
