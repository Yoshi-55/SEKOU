<% if resource.errors.any? %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" data-turbo-cache="false">
    <p class="font-bold mb-2">
      <%= pluralize(resource.errors.count, "個") %>のエラーがあります:
    </p>
    <ul class="list-disc list-inside">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
