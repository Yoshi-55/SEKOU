<div class="mt-6 text-center space-y-2">
  <%- if controller_name != 'sessions' %>
    <%= link_to "ログイン", new_session_path(resource_name), class: "text-blue-600 hover:underline" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div>
      <%= link_to "新規登録", new_registration_path(resource_name), class: "text-blue-600 hover:underline" %>
    </div>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div>
      <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name), class: "text-sm text-gray-600 hover:underline" %>
    </div>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div>
      <%= link_to "確認メールが届きませんか？", new_confirmation_path(resource_name), class: "text-sm text-gray-600 hover:underline" %>
    </div>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div>
      <%= link_to "アカウントロック解除", new_unlock_path(resource_name), class: "text-sm text-gray-600 hover:underline" %>
    </div>
  <% end %>
</div>
