<div class="max-w-4xl mx-auto">
<div class="mb-4">
  <div class="flex justify-between items-center gap-3">
    <div>
      <h1 class="text-3xl font-bold mb-1">マイグループ</h1>
      <p class="text-base text-gray-600">あなたが参加しているグループの一覧です</p>
    </div>
    <%= link_to "新規作成", new_group_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium text-sm shrink-0" %>
  </div>
</div>

<% if @groups.present? %>
  <div class="grid gap-4">
    <% @groups.each do |group| %>
      <div class="bg-white rounded-xl shadow border border-gray-100 hover:border-blue-200 hover:shadow-lg transition-all p-4">
        <!-- Header -->
        <div class="flex items-start justify-between gap-2 mb-3">
          <div class="flex-1 min-w-0">
            <%= link_to group.name, group_path(group), class: "text-base font-bold text-blue-600 hover:underline leading-snug block" %>
            <% if group.owner == current_user %>
              <span class="text-xs bg-blue-100 text-blue-700 px-2 py-0.5 rounded-full mt-1 inline-block">オーナー</span>
            <% end %>
          </div>
        </div>

        <% if group.description.present? %>
          <p class="text-sm text-gray-500 mb-3 leading-relaxed"><%= truncate(group.description, length: 80) %></p>
        <% end %>

        <!-- Stats -->
        <div class="flex items-center gap-4 text-xs text-gray-400 mb-3 pb-3 border-b border-gray-100">
          <span>👤 <%= group.members.count %>人</span>
          <span>📋 <%= group.jobs.count %>件</span>
        </div>

        <div class="flex gap-2">
          <%= link_to "詳細を見る", group_path(group), class: "bg-blue-50 text-blue-600 hover:bg-blue-100 px-4 py-2 rounded-lg font-medium text-sm flex-1 text-center" %>
          <% if group.owner == current_user %>
            <%= link_to "編集", edit_group_path(group), class: "bg-gray-100 text-gray-600 hover:bg-gray-200 px-4 py-2 rounded-lg font-medium text-sm text-center" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="bg-white rounded-xl shadow border border-gray-100 p-12 text-center">
    <p class="text-gray-500 text-base mb-4">まだグループに参加していません</p>
    <%= link_to "グループを作成する", new_group_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-5 py-2 rounded-lg inline-block font-medium text-sm" %>
  </div>
<% end %>
</div>
