<div class="max-w-4xl mx-auto">
<div class="mb-4">
  <div class="flex justify-between items-center gap-3">
    <div>
      <h1 class="text-3xl font-bold mb-1"><%= @group.name %></h1>
      <p class="text-sm text-gray-500">オーナー: <%= @group.owner.name %></p>
    </div>
    <% if @group.owner == current_user %>
      <div class="flex gap-2 shrink-0">
        <%= link_to "編集", edit_group_path(@group), class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium text-sm" %>
        <%= link_to "削除", group_path(@group), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg font-medium text-sm" %>
      </div>
    <% end %>
  </div>
</div>

<% if @group.description.present? %>
  <div class="bg-white rounded-xl shadow border border-gray-100 p-4 mb-4">
    <h2 class="text-base font-bold mb-2 text-gray-700">グループ説明</h2>
    <p class="text-sm text-gray-600 leading-relaxed"><%= simple_format(@group.description) %></p>
  </div>
<% end %>

<!-- メンバー一覧 -->
<div class="bg-white rounded-xl shadow border border-gray-100 p-4 mb-4">
  <h2 class="text-base font-bold mb-3 text-gray-700">メンバー (<%= @group.members.count %>人)</h2>

  <div class="space-y-2">
    <% @group.group_memberships.includes(:user).each do |membership| %>
      <div class="flex justify-between items-center p-3 border border-gray-100 rounded-xl">
        <div class="flex items-center gap-2">
          <div>
            <p class="font-medium text-sm"><%= membership.user.name %></p>
            <p class="text-xs text-gray-400"><%= membership.user.email %></p>
          </div>
          <% if membership.admin? %>
            <span class="text-xs bg-blue-100 text-blue-700 px-2 py-0.5 rounded-full">管理者</span>
          <% end %>
          <% if membership.user == @group.owner %>
            <span class="text-xs bg-purple-100 text-purple-700 px-2 py-0.5 rounded-full">オーナー</span>
          <% end %>
        </div>
        <% if @group.owner == current_user && membership.user != @group.owner %>
          <%= link_to "削除", remove_member_group_path(@group, user_id: membership.user.id), data: { turbo_method: :delete, turbo_confirm: "#{membership.user.name}さんをグループから削除しますか？" }, class: "text-red-500 hover:underline text-sm" %>
        <% end %>
      </div>
    <% end %>
  </div>

  <% if @group.owner == current_user %>
    <div class="mt-4 pt-4 border-t border-gray-100">
      <h3 class="font-bold text-sm mb-2 text-gray-700">メンバーを追加</h3>
      <%= form_with url: add_member_group_path(@group), method: :post, class: "flex gap-2" do |f| %>
        <%= text_field_tag :email, nil, placeholder: "追加するユーザーのメールアドレス", class: "flex-1 px-3 py-2 border border-gray-300 rounded-lg text-sm" %>
        <%= button_tag "追加", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium text-sm" %>
      <% end %>
    </div>
  <% end %>
</div>

<!-- グループの案件一覧 -->
<div class="bg-white rounded-xl shadow border border-gray-100 p-4">
  <h2 class="text-base font-bold mb-3 text-gray-700">グループの案件 (<%= @group.jobs.count %>件)</h2>

  <% if @group.jobs.present? %>
    <div class="space-y-2">
      <% @group.jobs.recent.limit(5).each do |job| %>
        <%= link_to job_path(job), class: "block border border-gray-100 rounded-xl p-3 hover:shadow-md hover:border-blue-200 transition-all" do %>
          <p class="font-medium text-sm text-gray-900 mb-1"><%= job.title %></p>
          <div class="flex gap-3 text-xs text-gray-400">
            <span>📍 <%= job.location %></span>
            <span class="font-medium text-blue-600"><%= number_to_currency(job.budget, unit: "¥", precision: 0) %></span>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <p class="text-sm text-gray-400 text-center py-4">まだ案件がありません</p>
  <% end %>
</div>
</div>
