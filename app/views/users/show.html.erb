<div class="max-w-4xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">マイプロフィール</h1>
    <%= link_to "編集", edit_profile_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded font-medium" %>
  </div>

  <!-- Basic Info -->
  <div class="bg-white rounded-lg shadow p-6 mb-6">
    <h2 class="text-xl font-bold mb-4">基本情報</h2>
    <div class="space-y-3">
      <div class="grid grid-cols-3">
        <span class="text-gray-600">ユーザータイプ</span>
        <span class="col-span-2 font-medium">
          <% if @user.is_a?(Client) %>
            <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm">企業（依頼主）</span>
          <% elsif @user.is_a?(Craftsman) %>
            <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm">職人</span>
          <% end %>
        </span>
      </div>
      <div class="grid grid-cols-3">
        <span class="text-gray-600">名前</span>
        <span class="col-span-2 font-medium"><%= @user.name %></span>
      </div>
      <div class="grid grid-cols-3">
        <span class="text-gray-600">会社名</span>
        <span class="col-span-2 font-medium"><%= @user.company_name %></span>
      </div>
      <div class="grid grid-cols-3">
        <span class="text-gray-600">都道府県</span>
        <span class="col-span-2 font-medium"><%= @user.prefecture %></span>
      </div>
      <div class="grid grid-cols-3">
        <span class="text-gray-600">メールアドレス</span>
        <span class="col-span-2 font-medium"><%= @user.email %></span>
      </div>
      <div class="grid grid-cols-3">
        <span class="text-gray-600">電話番号</span>
        <span class="col-span-2 font-medium"><%= @user.phone %></span>
      </div>

      <% if @user.is_a?(Client) && @user.company_address.present? %>
        <div class="grid grid-cols-3">
          <span class="text-gray-600">会社住所</span>
          <span class="col-span-2 font-medium"><%= @user.company_address %></span>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Craftsman Specific Info -->
  <% if @user.is_a?(Craftsman) %>
    <div class="bg-white rounded-lg shadow p-6 mb-6">
      <h2 class="text-xl font-bold mb-4">職人情報</h2>
      <div class="space-y-3">
        <% if @user.years_of_experience.present? %>
          <div class="grid grid-cols-3">
            <span class="text-gray-600">経験年数</span>
            <span class="col-span-2 font-medium"><%= @user.years_of_experience %>年</span>
          </div>
        <% end %>

        <% if @user.skills.present? %>
          <div class="grid grid-cols-3">
            <span class="text-gray-600">スキル</span>
            <span class="col-span-2 font-medium"><%= @user.skills %></span>
          </div>
        <% end %>

        <% if @user.bio.present? %>
          <div>
            <p class="text-gray-600 mb-2">自己紹介</p>
            <div class="p-4 bg-gray-50 rounded">
              <%= simple_format(@user.bio) %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Recent Applications -->
    <% if @applies.present? %>
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-xl font-bold">最近の応募</h2>
          <%= link_to "すべて見る →", applies_path, class: "text-blue-600 hover:underline" %>
        </div>
        <div class="space-y-3">
          <% @applies.each do |apply| %>
            <%= link_to apply_path(apply), class: "block p-4 border rounded hover:bg-gray-50" do %>
              <div class="flex justify-between items-start">
                <div>
                  <p class="font-medium"><%= apply.job.title %></p>
                  <p class="text-sm text-gray-600">応募日: <%= l(apply.applied_at, format: :short) %></p>
                </div>
                <% if apply.pending? %>
                  <span class="bg-yellow-100 text-yellow-800 text-xs px-2 py-1 rounded-full">審査中</span>
                <% elsif apply.accepted? %>
                  <span class="bg-green-500 text-white text-xs px-2 py-1 rounded-full">承認済み</span>
                <% elsif apply.rejected? %>
                  <span class="bg-red-500 text-white text-xs px-2 py-1 rounded-full">不採用</span>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>

  <!-- Client Specific Info -->
  <% if @user.is_a?(Client) %>
    <!-- Recent Jobs -->
    <% if @jobs.present? %>
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-xl font-bold">掲載中の案件</h2>
          <%= link_to "すべて見る →", jobs_path, class: "text-blue-600 hover:underline" %>
        </div>
        <div class="space-y-3">
          <% @jobs.each do |job| %>
            <%= link_to job_path(job), class: "block p-4 border rounded hover:bg-gray-50" do %>
              <div class="flex justify-between items-start">
                <div>
                  <p class="font-medium"><%= job.title %></p>
                  <p class="text-sm text-gray-600">掲載日: <%= l(job.created_at, format: :short) %></p>
                </div>
                <% if job.published? %>
                  <span class="bg-green-500 text-white text-xs px-2 py-1 rounded-full">公開中</span>
                <% elsif job.closed? %>
                  <span class="bg-gray-500 text-white text-xs px-2 py-1 rounded-full">終了</span>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
