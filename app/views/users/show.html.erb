<div class="max-w-4xl mx-auto">
  <div class="flex justify-between items-center mb-4 gap-3">
    <h1 class="text-3xl font-bold">マイプロフィール</h1>
    <%= link_to "編集", edit_profile_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium text-sm shrink-0" %>
  </div>

  <!-- Basic Info -->
  <div class="bg-white rounded-xl shadow border border-gray-100 p-4 mb-4">
    <h2 class="text-base font-bold mb-3 text-gray-700">基本情報</h2>
    <div class="space-y-2">
      <div class="grid grid-cols-2 gap-2">
        <span class="text-xs text-gray-400">名前</span>
        <span class="font-medium text-sm"><%= @user.name %></span>
      </div>
      <div class="grid grid-cols-2 gap-2">
        <span class="text-xs text-gray-400">会社名</span>
        <span class="font-medium text-sm"><%= @user.company_name %></span>
      </div>
      <div class="grid grid-cols-2 gap-2">
        <span class="text-xs text-gray-400">都道府県</span>
        <span class="font-medium text-sm"><%= @user.prefecture %></span>
      </div>
      <div class="grid grid-cols-2 gap-2">
        <span class="text-xs text-gray-400">メール</span>
        <span class="font-medium text-sm break-all"><%= @user.email %></span>
      </div>
      <div class="grid grid-cols-2 gap-2">
        <span class="text-xs text-gray-400">電話番号</span>
        <span class="font-medium text-sm"><%= @user.phone %></span>
      </div>
      <% if @user.company_address.present? %>
        <div class="grid grid-cols-2 gap-2">
          <span class="text-xs text-gray-400">会社住所</span>
          <span class="font-medium text-sm"><%= @user.company_address %></span>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Additional Info -->
  <% if @user.years_of_experience.present? || @user.skills.present? || @user.bio.present? %>
    <div class="bg-white rounded-xl shadow border border-gray-100 p-4 mb-4">
      <h2 class="text-base font-bold mb-3 text-gray-700">追加情報</h2>
      <div class="space-y-2">
        <% if @user.years_of_experience.present? %>
          <div class="grid grid-cols-2 gap-2">
            <span class="text-xs text-gray-400">経験年数</span>
            <span class="font-medium text-sm"><%= @user.years_of_experience %>年</span>
          </div>
        <% end %>
        <% if @user.skills.present? %>
          <div class="grid grid-cols-2 gap-2">
            <span class="text-xs text-gray-400">スキル</span>
            <span class="font-medium text-sm"><%= @user.skills %></span>
          </div>
        <% end %>
        <% if @user.bio.present? %>
          <div>
            <p class="text-xs text-gray-400 mb-1">自己紹介</p>
            <div class="p-3 bg-gray-50 rounded-xl text-sm leading-relaxed text-gray-700">
              <%= simple_format(@user.bio) %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Recent Applications -->
  <% if @applies.present? %>
    <div class="bg-white rounded-xl shadow border border-gray-100 p-4 mb-4">
      <div class="flex justify-between items-center mb-3">
        <h2 class="text-base font-bold text-gray-700">最近の応募</h2>
        <%= link_to "すべて見る →", applies_path, class: "text-blue-600 hover:underline text-xs" %>
      </div>
      <div class="space-y-2">
        <% @applies.each do |apply| %>
          <%= link_to apply_path(apply), class: "block p-3 border border-gray-100 rounded-xl hover:shadow-md hover:border-blue-200 transition-all" do %>
            <div class="flex justify-between items-start gap-2">
              <div class="flex-1 min-w-0">
                <p class="font-medium text-sm text-gray-900 truncate"><%= apply.job.title %></p>
                <p class="text-xs text-gray-400 mt-0.5">応募日: <%= l(apply.applied_at, format: :short) %></p>
              </div>
              <% if apply.pending? %>
                <span class="bg-yellow-100 text-yellow-800 text-xs px-2 py-0.5 rounded-full shrink-0">審査中</span>
              <% elsif apply.accepted? %>
                <span class="bg-green-500 text-white text-xs px-2 py-0.5 rounded-full shrink-0">承認済み</span>
              <% elsif apply.rejected? %>
                <span class="bg-red-500 text-white text-xs px-2 py-0.5 rounded-full shrink-0">不採用</span>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Recent Jobs -->
  <% if @jobs.present? %>
    <div class="bg-white rounded-xl shadow border border-gray-100 p-4">
      <div class="flex justify-between items-center mb-3">
        <h2 class="text-base font-bold text-gray-700">掲載中の案件</h2>
        <%= link_to "すべて見る →", jobs_path, class: "text-blue-600 hover:underline text-xs" %>
      </div>
      <div class="space-y-2">
        <% @jobs.each do |job| %>
          <%= link_to job_path(job), class: "block p-3 border border-gray-100 rounded-xl hover:shadow-md hover:border-blue-200 transition-all" do %>
            <div class="flex justify-between items-start gap-2">
              <div class="flex-1 min-w-0">
                <p class="font-medium text-sm text-gray-900 truncate"><%= job.title %></p>
                <p class="text-xs text-gray-400 mt-0.5">掲載日: <%= l(job.created_at, format: :short) %></p>
              </div>
              <% if job.published? %>
                <span class="bg-green-500 text-white text-xs px-2 py-0.5 rounded-full shrink-0">公開中</span>
              <% elsif job.closed? %>
                <span class="bg-gray-400 text-white text-xs px-2 py-0.5 rounded-full shrink-0">終了</span>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
