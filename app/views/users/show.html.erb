<div class="max-w-4xl mx-auto">
  <div class="flex justify-between items-center mb-4 md:mb-6 gap-3">
    <h1 class="text-2xl md:text-3xl font-bold">マイプロフィール</h1>
    <%= link_to "編集", edit_profile_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded font-medium text-base md:text-lg shrink-0" %>
  </div>

  <!-- Basic Info -->
  <div class="bg-white rounded-lg shadow p-4 md:p-6 mb-4 md:mb-6">
    <h2 class="text-xl md:text-2xl font-bold mb-3 md:mb-4">基本情報</h2>
    <div class="space-y-3">
      <div class="grid grid-cols-3">
        <span class="text-gray-600 text-base md:text-lg">名前</span>
        <span class="col-span-2 font-medium text-base md:text-lg"><%= @user.name %></span>
      </div>
      <div class="grid grid-cols-3">
        <span class="text-gray-600 text-base md:text-lg">会社名</span>
        <span class="col-span-2 font-medium text-base md:text-lg"><%= @user.company_name %></span>
      </div>
      <div class="grid grid-cols-3">
        <span class="text-gray-600 text-base md:text-lg">都道府県</span>
        <span class="col-span-2 font-medium text-base md:text-lg"><%= @user.prefecture %></span>
      </div>
      <div class="grid grid-cols-3">
        <span class="text-gray-600 text-base md:text-lg">メール</span>
        <span class="col-span-2 font-medium text-base md:text-lg break-all"><%= @user.email %></span>
      </div>
      <div class="grid grid-cols-3">
        <span class="text-gray-600 text-base md:text-lg">電話番号</span>
        <span class="col-span-2 font-medium text-base md:text-lg"><%= @user.phone %></span>
      </div>

      <% if @user.company_address.present? %>
        <div class="grid grid-cols-3">
          <span class="text-gray-600 text-base md:text-lg">会社住所</span>
          <span class="col-span-2 font-medium text-base md:text-lg"><%= @user.company_address %></span>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Additional Info -->
  <% if @user.years_of_experience.present? || @user.skills.present? || @user.bio.present? %>
    <div class="bg-white rounded-lg shadow p-4 md:p-6 mb-4 md:mb-6">
      <h2 class="text-xl md:text-2xl font-bold mb-3 md:mb-4">追加情報</h2>
      <div class="space-y-3">
        <% if @user.years_of_experience.present? %>
          <div class="grid grid-cols-3">
            <span class="text-gray-600 text-base md:text-lg">経験年数</span>
            <span class="col-span-2 font-medium text-base md:text-lg"><%= @user.years_of_experience %>年</span>
          </div>
        <% end %>

        <% if @user.skills.present? %>
          <div class="grid grid-cols-3">
            <span class="text-gray-600 text-base md:text-lg">スキル</span>
            <span class="col-span-2 font-medium text-base md:text-lg"><%= @user.skills %></span>
          </div>
        <% end %>

        <% if @user.bio.present? %>
          <div>
            <p class="text-gray-600 text-base md:text-lg mb-2">自己紹介</p>
            <div class="p-4 bg-gray-50 rounded text-base md:text-lg">
              <%= simple_format(@user.bio) %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

  <% end %>

  <!-- Recent Applications -->
  <% if @applies.present? %>
    <div class="bg-white rounded-lg shadow p-4 md:p-6 mb-4 md:mb-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl md:text-2xl font-bold">最近の応募</h2>
        <%= link_to "すべて見る →", applies_path, class: "text-blue-600 hover:underline text-base md:text-lg" %>
      </div>
      <div class="space-y-3">
        <% @applies.each do |apply| %>
          <%= link_to apply_path(apply), class: "block p-4 border rounded hover:bg-gray-50" do %>
            <div class="flex justify-between items-start">
              <div>
                <p class="font-medium text-base md:text-lg"><%= apply.job.title %></p>
                <p class="text-sm md:text-base text-gray-600">応募日: <%= l(apply.applied_at, format: :short) %></p>
              </div>
              <% if apply.pending? %>
                <span class="bg-yellow-100 text-yellow-800 text-sm md:text-base px-2 py-1 rounded-full">審査中</span>
              <% elsif apply.accepted? %>
                <span class="bg-green-500 text-white text-sm md:text-base px-2 py-1 rounded-full">承認済み</span>
              <% elsif apply.rejected? %>
                <span class="bg-red-500 text-white text-sm md:text-base px-2 py-1 rounded-full">不採用</span>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Recent Jobs -->
  <% if @jobs.present? %>
    <div class="bg-white rounded-lg shadow p-4 md:p-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl md:text-2xl font-bold">掲載中の案件</h2>
        <%= link_to "すべて見る →", jobs_path, class: "text-blue-600 hover:underline text-base md:text-lg" %>
      </div>
      <div class="space-y-3">
        <% @jobs.each do |job| %>
          <%= link_to job_path(job), class: "block p-4 border rounded hover:bg-gray-50" do %>
            <div class="flex justify-between items-start">
              <div>
                <p class="font-medium text-base md:text-lg"><%= job.title %></p>
                <p class="text-sm md:text-base text-gray-600">掲載日: <%= l(job.created_at, format: :short) %></p>
              </div>
              <% if job.published? %>
                <span class="bg-green-500 text-white text-sm md:text-base px-2 py-1 rounded-full">公開中</span>
              <% elsif job.closed? %>
                <span class="bg-gray-500 text-white text-sm md:text-base px-2 py-1 rounded-full">終了</span>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
